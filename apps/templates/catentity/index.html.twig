{% extends 'base.html.twig' %}


{% block title %}{{ 'Listado de Entidades' | trans }}{% endblock %}

{% block body %}
<h1>{{ 'Lista de Entidades' | trans }}</h1>

{% for message in app.session.getFlashBag.get('message') %}
    <br><div class="alert alert-success" role="alert">{{message| trans}}</div>
{% endfor %}
{% for message in app.session.getFlashBag.get('messageerr') %}
    <br><div class="alert alert-danger" role="alert">{{message | trans }}</div>
{% endfor %}


<a class="btn btn-primary" role="button" aria-disabled="true" href="{{url('catentity_new')}}">{{ 'Nueva Entidad' | trans }}</a>
<table id="tblist" class="table table-sm table-striped table-bordered table-hover">
<thead>
<tr>
 <th data-field="name">{{ 'Nombre' | trans}}</th>
 <th data-field="description">{{ 'Descripcion' | trans}}</th>
 <th data-field="active">{{ 'Active' | trans}}</th>
 <th data-field="opcionCatEntity">{{'Opcion' | trans}}</th>
</tr>
</thead>
</table>

<script>
$(document).ready(function() {
  $('#tblist').DataTable({
    "stateSave":true,"processing":true,
    "language":{"url":"{{asset('/assets/datatables/Spanish.json')}}"},
    "ajax":"{{url('catentity_list')}}",
    "order": [[ 0, "desc" ]],
    "columns":[
      {"data":"name",fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {if(oData.id) {$(nTd).html("<a href='/catentity/"+oData.id+"/edit'>"+oData.name+"</a>");}}},
      {"data":"description"},
      {"data":"active",fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {if(oData.active==1){$(nTd).html("✅");}else{$(nTd).html("❌");}}},
      {"data":"id",fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {if(oData.id) {
        $(nTd).html(
          
          "<a href='/catentity/"+oData.id+"/edit'><i class='bi bi-pencil'></i></a> / <a href='/catentity/"+oData.id+"/delete'><i class='bi bi-trash'></i></a>"
        );
        }}},
    ]
   });   
});
</script>

{% endblock %}
