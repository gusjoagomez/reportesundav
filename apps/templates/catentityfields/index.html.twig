{% extends 'base.html.twig' %}


{% block title %}{{ 'Listado de CatEntityFields' | trans }}{% endblock %}

{% block body %}
<h1>{{ 'Lista de CatEntityFields' | trans }}</h1>

{% for message in app.session.getFlashBag.get('message') %}
    <br><div class="alert alert-success" role="alert">{{message| trans}}</div>
{% endfor %}
{% for message in app.session.getFlashBag.get('messageerr') %}
    <br><div class="alert alert-danger" role="alert">{{message | trans }}</div>
{% endfor %}


<a class="btn btn-primary" role="button" aria-disabled="true" href="{{url('catentityfields_new')}}">{{ 'Nuevo CatEntityFields' | trans }}</a>
<table id="tblist" class="table table-sm table-striped table-bordered table-hover">
<thead>
<tr>
 <th data-field="id">{{ 'Id' | trans}}</th>
 <th data-field="ftable">{{ 'Ftable' | trans}}</th>
 <th data-field="orderlist">{{ 'Orderlist' | trans}}</th>
 <th data-field="fieldname">{{ 'Fieldname' | trans}}</th>
 <th data-field="entityId">{{ 'Entity_id' | trans}}</th>
 <th data-field="typename">{{ 'Typename' | trans}}</th>
 <th data-field="esnull">{{ 'Esnull' | trans}}</th>
 <th data-field="pk">{{ 'Pk' | trans}}</th>
 <th data-field="fkey">{{ 'Fkey' | trans}}</th>
 <th data-field="label">{{ 'Label' | trans}}</th>
 <th data-field="labelhelp">{{ 'Labelhelp' | trans}}</th>
 <th data-field="opcionCatEntityFields">{{'Opcion' | trans}}</th>
</tr>
</thead>
</table>

<script>
$(document).ready(function() {
  $('#tblist').DataTable({
    "stateSave":true,"processing":true,
    "language":{"url":"{{asset('/assets/datatables/Spanish.json')}}"},
    "ajax":"{{url('catentityfields_list')}}",
    "order": [[ 0, "desc" ]],
    "columns":[
      {"data":"id",fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {if(oData.id) {$(nTd).html("<a href='/catentityfields/"+oData.id+"/edit'>"+oData.id+"</a>");}}},
      {"data":"ftable"},
      {"data":"orderlist"},
      {"data":"fieldname"},
      {"data":"entityId"},
      {"data":"typename"},
      {"data":"esnull"},
      {"data":"pk"},
      {"data":"fkey"},
      {"data":"label"},
      {"data":"labelhelp"},
      {"data":"id",fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {if(oData.id) {$(nTd).html("<a href='/catentityfields/"+oData.id+"/delete'><i class='bi bi-trash'></i></a>");}}},
    ]
   });   
});
</script>

{% endblock %}
